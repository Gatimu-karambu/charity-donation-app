<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
<!-- Base application theme -->


    <style name="MainTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryDark</item>
        <item name="colorOnPrimary">@color/textWhite</item>

        <!-- Secondary brand colors -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondaryDark</item>
        <item name="colorOnSecondary">@color/textWhite</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Text appearance -->
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>
        <item name="android:textColorHint">@color/textHint</item>

        <!-- Custom styles for components -->
        <item name="textInputStyle">@style/Widget.DonationApp.TextInputLayout</item>
        <item name="materialButtonStyle">@style/Widget.DonationApp.Button</item>
    </style>

    <style name="CircularImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>



<style name="Theme.DonationApp" parent="Theme.MaterialComponents.Light.NoActionBar">
    <!-- Primary brand colors -->
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryVariant">@color/primaryDark</item>
    <item name="colorOnPrimary">@color/textWhite</item>

    <!-- Secondary brand colors -->
    <item name="colorSecondary">@color/secondary</item>
    <item name="colorSecondaryVariant">@color/secondaryDark</item>
    <item name="colorOnSecondary">@color/textWhite</item>

    <!-- Status bar color -->
    <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

    <!-- Text appearance -->
    <item name="android:textColor">@color/textPrimary</item>
    <item name="android:textColorSecondary">@color/textSecondary</item>
    <item name="android:textColorHint">@color/textHint</item>

    <!-- Custom styles for components -->
    <item name="textInputStyle">@style/Widget.DonationApp.TextInputLayout</item>
    <item name="materialButtonStyle">@style/Widget.DonationApp.Button</item>
</style>

<!-- Custom TextInputLayout style -->
<style name="Widget.DonationApp.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
    <item name="boxStrokeColor">@color/black</item>
    <item name="boxStrokeWidth">1.5dp</item>
    <item name="boxCornerRadiusTopStart">12dp</item>
    <item name="boxCornerRadiusTopEnd">12dp</item>
    <item name="boxCornerRadiusBottomStart">12dp</item>
    <item name="boxCornerRadiusBottomEnd">12dp</item>
    <item name="startIconTint">@color/primary</item>
    <item name="endIconTint">@color/primary</item>
    <item name="hintTextColor">@color/primary</item>
</style>

<!-- Custom Button style -->
<style name="Widget.DonationApp.Button" parent="Widget.MaterialComponents.Button">
    <item name="android:textSize">16sp</item>
    <item name="android:letterSpacing">0.025</item>
    <item name="android:textAllCaps">false</item>
    <item name="cornerRadius">12dp</item>
    <item name="elevation">4dp</item>
</style>
</resources>


